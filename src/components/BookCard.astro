---
const { title, synopsis, link, image } = Astro.props;
---

<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="bg-white rounded-lg shadow-sm overflow-hidden flex flex-row max-w-4xl border border-gray-200">
    <!-- Imagen a la izquierda -->
    <div class="relative w-1/3 p-2">
      <img src={image} alt="Portada del libro" class="w-full h-full object-cover shadow-md rounded-md" />
    </div>
    <!-- Contenido a la derecha -->
    <div class="p-6 flex flex-col w-2/3 justify-between">
      <div>
        <h1 class="text-3xl font-bold mb-4 text-gray-800">{title}</h1>
        <p class="text-gray-700 text-base mb-6 text-justify">{synopsis}</p>
      </div>
      <a href={link} class="inline-block bg-orange-900 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition self-start">
        Leer
      </a>
    </div>
  </div>
</div>
