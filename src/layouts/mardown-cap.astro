---
// filepath: y:\framewoks\astro\libro-love\src\layouts\mardown-cap.astro
import MainLayout from '../layouts/MainLayout.astro';

const {frontmatter} = Astro.props;
---

<MainLayout>
  <main class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded-lg">
    <h3 class="text-2xl font-bold mb-6 text-center">{frontmatter.title}</h3>
    <article class="prose prose-lg max-w-none">
      <slot />
    </article>
    <nav class="flex justify-between items-center mt-8">
      {frontmatter.prev ? (
        <a href={frontmatter.prev} class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition">
          ⬅ Anterior
        </a>
      ) : (
        <span></span>
      )}
      <a href="/" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition">
        Inicio
      </a>
      {frontmatter.next ? (
        <a href={frontmatter.next} class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition">
          Siguiente ➡
        </a>
      ) : (
        <span></span>
      )}
    </nav>
    
</MainLayout>
